{
	"service": "app",
	"dockerComposeFile": "docker-compose.yml",
	"features": {
		"ghcr.io/devcontainers/features/common-utils": {},
		"ghcr.io/devcontainers/features/aws-cli:latest": {},
		"ghcr.io/devcontainers/features/docker-in-docker:latest": {},
		"ghcr.io/devcontainers/features/sshd:latest": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"chouzz.vscode-better-align",
				"dbaeumer.vscode-eslint",
				"dotenv.dotenv-vscode",
				"eamodio.gitlens",
				"esbenp.prettier-vscode",
				"GitHub.copilot-chat",
				"GitHub.copilot",
				"oderwat.indent-rainbow",
				"redhat.vscode-yaml",
				"shardulm94.trailing-spaces",
				"Shopify.ruby-lsp",
				"standard.vscode-standard",
				"streetsidesoftware.code-spell-checker",
				"stylelint.vscode-stylelint",
				"wmaurer.change-case"
			]
		}
	},
	"remoteEnv": {
		"COMPOSE_HTTP_TIMEOUT": "300"
	},
	"workspaceFolder": "/rails",
	"mounts": [
		"source=${localWorkspaceFolder},target=/rails,type=bind,consistency=cached"
	],
	"postCreateCommand": "rm -fr ./tmp/* && rm -fr ./log/* && rm -fr ./public/vite*",
	"forwardPorts": [
		"caddy:3000",
		"caddy:3036",
		"caddy:2379",
		"caddy:9000",
		"caddy:9090"
	],
	"portsAttributes": {
		"3000": {
			"onAutoForward": "ignore"
		},
		"3036": {
			"onAutoForward": "ignore"
		},
		"6006": {
			"onAutoForward": "ignore"
		}
	}
}